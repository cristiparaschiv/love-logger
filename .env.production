# Production Environment Variables
# Copy this file to .env and update with your production values

# JWT Secret - CHANGE THIS IN PRODUCTION
# Generate a secure random string (e.g., openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-openssl-rand-base64-32

# User Passwords - Set before first deployment (optional)
# If not set, defaults are: he123, she123
# You can also change passwords later with: npm run change-password
HE_PASSWORD=
SHE_PASSWORD=

# CORS Origin - Set to your production domain
CORS_ORIGIN=http://localhost

# HTTP/HTTPS Ports
HTTP_PORT=80
HTTPS_PORT=443

# Database URL (using Docker volume)
DATABASE_URL=file:/app/data/love-logger.db

# Geocoding API
GEOCODING_API_URL=https://nominatim.openstreetmap.org

# Node Environment
NODE_ENV=production

# Application Port (Internal - don't change unless needed)
PORT=3900

# Frontend Build-time Environment Variables
# These are baked into the frontend build
VITE_API_URL=/api
VITE_WS_URL=/socket.io
